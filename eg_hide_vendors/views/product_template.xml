<odoo>
    <record model="ir.ui.view" id="product_template_hide_vendors_form_view">
        <field name="name">product.template.hide.vendors.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='variant_seller_ids']" position="attributes">
                <attribute name="groups">eg_hide_vendors.show_hide_vendor</attribute>
            </xpath>
        </field>
    </record>
</odoo>
